@model Domain.Models.Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit department</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id"/>

            <div class="form-group">
                <label asp-for="Name" class="control-label">New Department Name</label>
                <input asp-for="Name" class="form-control" placeholder="Write the new department name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-primary"/>
                <a type="button" class="btn btn-outline-info" asp-action="Index">Back to main</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

